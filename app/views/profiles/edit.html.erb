<%= form_for [current_user, @profile], html: { multipart: true } do |form| %>
  <fieldset>
    <h3>Edit your profile</h3>

    <%= render "error_messages", target: @profile %>

    <%= form.label :description, "Describe yourself" %>
    <%= form.text_field :description %>

    <%= form.label :tag_list, "Add tags" %>
    <%= form.text_field :tag_list %>

    <%= form.label :birthday, "Enter your birthday" %>
    <%= form.date_select :birthday, start_year: 1900 %>

    <% if @profile.avatar? %>
      <p>Your current profile picture:<p>
      <%= image_tag @profile.avatar %>

      <%= form.label :avatar, "Change your profile picture" %>
      <%= form.file_field :avatar %>

      <%= form.label :image_delete, "Remove Image" %>
      <%= check_box_tag(:image_delete)  %>
    <% else %>
      <%= form.label :avatar, "Upload a profile picture" %>
      <%= form.file_field :avatar %>
    <% end %>

    <%= form.submit "Update Profile" %>
  </fieldset>
<% end %>
